{% extends 'base.html.twig' %}

{% block title %}Periodo index{% endblock %}

{% block body %}
    <h1>Periodo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for periodo in periodos %}
            <tr>
                <td>{{ periodo.id }}</td>
                <td>{{ periodo.nombre }}</td>
                <td>
                    <a href="{{ path('app_periodo_show', {'id': periodo.id}) }}">show</a>
                    <a href="{{ path('app_periodo_edit', {'id': periodo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_periodo_new') }}">Create new</a>
{% endblock %}
