{% extends 'base_dashboard_admin2.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>User index</h1>

		<table class="table tabled-bordered table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th class=' text-center d-none  d-xl-table-cell'>Roles</th>
					<th class=' text-center d-none  d-xl-table-cell'>Nombres</th>
					<th class=' text-center d-none  d-xl-table-cell'>Apellidos</th>
					<th class=' text-center d-none  d-xl-table-cell'>Estado</th>
					<th class=' text-center d-none  d-xl-table-cell'>Nivel</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td class=' text-center d-none  d-xl-table-cell'>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td class=' text-center d-none  d-xl-table-cell'>{{ user.nombres }}</td>
						<td class=' text-center d-none  d-xl-table-cell'>{{ user.apellidos }}</td>
						<td class=' text-center d-none  d-xl-table-cell'>{{ user.estado }}</td>
						<td class=' text-center d-none  d-xl-table-cell'>{{ user.nivel }}</td>
						<td>
							<a href="{{ path('app_user_show', {'id': user.id}) }}" title='Ver detalles de un nuevo usuario'>
								<i class='fas fa-glasses' style='font-size:22px; color:#14626f'></i>
							</a>
							<a href="{{ path('app_user_edit', {'id': user.id}) }}" title='Editar un usuario'>
								<i class='fas fa-user-edit' style='font-size:22px; color:#14626f'></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_user_new') }}">Create new</a>
	</div>
{% endblock %}
