{% extends 'base_dashboard_admin2.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Detalles de Usuario</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Nombre</th>
					<td>{{ user.nombres }}</td>
				</tr>
				<tr>
					<th>Apellido</th>
					<td>{{ user.apellidos }}</td>
				</tr>
				<tr>
					<th>Estado</th>
					<td>
						{% if (user.estado == 1) %}
							Activo
						{% else %}
							Inactivo
						{% endif %}
					</td>
				</tr>
				<tr>
					<th>Nivel</th>
					<td>
						{% if (user.nivel == 5) %}
							Usuario
						{% else %}
							Administrador
						{% endif %}
					</td>
				</tr>
			</tbody>
		</table>
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12 text-right">
				<a href="{{ path('app_user_index') }}">
					<i class='fas fa-angle-double-left' style='font-size:22px; color:#14626f'></i>
				</a>
			</div>
		</div>
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12 text-right">
				<a href="{{ path('app_user_edit', {'id': user.id}) }}" title='Editar el usuario'>
					<i class='fas fa-user-edit' style='font-size:22px; color:#14626f'></i>
				</a>
			</div>
		</div>
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12 text-right">
				{{ include('user/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
</div></div>{% endblock %}
