{% extends 'base_pdf.html.twig' %}
{% block title %}Reporte de Indicadores
{% endblock %}
{% block javascripts %}{% endblock %}
{% block body %}
	<div class="container">

		<div class="card">
			<div class="card-header">
				<img src='{{ logo }}' alt='Logo' width='150' height='auto'/>
				<h3>Reporte de Indicadores</h3>
			</div>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col-12 col-md-12 col-lg-12">

					<label class='input-group-text' for="ente">Organismo Acreditador:&nbsp;
						<strong>{{ ente.nombre }}</strong>
					</label>

				</div>
			</div>
			<div class="row">
				<div class="col-12 col-md-12 col-lg-12">

					<label class='input-group-text' for='reporte'>Reporte:<strong>&nbsp;{{ reporte.titulo}}</strong>
					</label>

				</div>
			</div>
			<div class="row">
				<div class="col-12 col-md-12 col-lg-12">

					<label class='input-group-text' for='periodo'>Periodo:<strong>&nbsp;{{ periodo.nombre}}</strong>
					</label>

				</div>
			</div>
			<hr>
			<table class="table table-striped table-bordered" width='100%'>
				<thead>
					<tr align='center'>
						<th>Item</th>
						<th>Indicador</th>
						<th>Definción</th>
						<th>Fórmula</th>
						<th>Periodo</th>
						<th>Valor</th>
					</tr>
				</thead>
				<tbody>
					{% set i = 1 %}
					{% for indicador in indicadores %}
						<tr>
							<td align='center'>{{ i  }}</td>
							<td>{{ indicador['concepto']  }}</td>
							<td>{{ indicador['definicion']  }}</td>
							<td>{{ indicador['formula']  }}</td>
							<td>{{ indicador['periodo']  }}</td>
							<td align='right'>
								{% if (indicador['unidad'] == "%" ) %}
									{{ indicador['valor'] ~ " %" }}
								{% else %}
									{{ indicador['valor'] ~ " %" }}
								{% endif %}
							</td>
						</tr>
						{% set i =  i + 1 %}
					{% endfor %}
				</tbody>
			</table>
		</div>

	</div>
{% endblock %}
